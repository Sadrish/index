    <script>
        // Tab switching functionality
        const tabs = document.querySelectorAll('.nav-tab');
        const platformInfos = document.querySelectorAll('.platform-info');

        tabs.forEach(tab => {
            tab.addEventListener('click', () => {
                // Remove active class from all tabs and platform info
                tabs.forEach(t => t.classList.remove('active'));
                platformInfos.forEach(info => info.classList.remove('active'));

                // Add active class to clicked tab
                tab.classList.add('active');

                // Show corresponding platform info
                const platform = tab.dataset.platform;
                const platformInfo = document.getElementById(`platform-${platform}`);
                if (platformInfo) {
                    platformInfo.classList.add('active');
                }
            });
        });

        // Card expansion functionality
        const processCards = document.querySelectorAll('.process-card');

        processCards.forEach(card => {
            card.addEventListener('click', () => {
                const details = card.querySelector('.card-details');
                const isExpanded = card.classList.contains('expanded');

                if (isExpanded) {
                    card.classList.remove('expanded');
                    details.classList.remove('show');
                } else {
                    card.classList.add('expanded');
                    details.classList.add('show');
                }

                updateProgress();
            });
        });

        // Sidebar toggle
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('open');
        }

        // Progress indicator
        function updateProgress() {
            const totalCards = processCards.length;
            const expandedCards = document.querySelectorAll('.process-card.expanded').length;
            const progressPercent = (expandedCards / totalCards) * 100;

            const progressBar = document.getElementById('progressBar');
            progressBar.style.width = progressPercent + '%';
        }

        // Smooth scrolling for card navigation
        function scrollToCard(step) {
            const card = document.querySelector(`[data-step="${step}"]`);
            if (card) {
                card.scrollIntoView({ behavior: 'smooth', block: 'center' });
            }
        }

        // Keyboard navigation
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
                // Collapse all cards
                processCards.forEach(card => {
                    card.classList.remove('expanded');
                    const details = card.querySelector('.card-details');
                    details.classList.remove('show');
                });
                updateProgress();
            }
        });

        // Initialize tooltips (simple implementation)
        const tooltips = document.querySelectorAll('.tooltip');
        tooltips.forEach(tooltip => {
            tooltip.addEventListener('mouseenter', () => {
                // Tooltip is handled by CSS
            });
        });

        // Auto-expand first card on load
        document.addEventListener('DOMContentLoaded', () => {
            const firstCard = document.querySelector('.process-card');
            if (firstCard) {
                firstCard.click();
            }
        });

        // Intersection Observer for scroll-based animations
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.animationPlayState = 'running';
                }
            });
        }, { threshold: 0.1 });

        processCards.forEach(card => {
            observer.observe(card);
        });
    </script>
</body>
